<?xml version="1.0" encoding="UTF-8"?>
<!--
    0_Area7Items - Item Definitions
    Author: Frilioth
    Version: 1.2.0

    This mod loads BEFORE FrilArea7Challenge (alphabetical order) so that
    all Area 7 custom items exist by the time traders.xml is parsed.

    Meshfile paths use #@modfolder: which resolves to THIS mod's Resources folder.
    A copy of area7Notes.unity3d must exist in 0_Area7Items/Resources/ as well as
    FrilArea7Challenge/Resources/.

    NOTE: noteArea7Extraction has EconomicValue=1 so it appears in Hugh's trade window.
    Hugh sells the extraction order for 1 duke - triggers quest_Area7Extraction popup.
-->
<configs>
    <append xpath="/items">

        <!-- ================================================
             AREA 7 RULES NOTE
             Readable item given on spawn.
             Also sold by Hugh for 1 duke as the Extraction Order placeholder.
             EconomicValue required for trader window visibility.
             ================================================ -->
        <item name="noteArea7Rules">
            <property name="Extends" value="blankNoteMaster"/>
            <property name="HoldType" value="31"/>
            <property name="Meshfile" value="#@modfolder:Resources/area7Notes.unity3d?noteArea7Rules.Prefab"/>
            <property name="CreativeMode" value="None"/>
            <property name="CustomIcon" value="challengeQuestMaster"/>
            <property name="DescriptionKey" value="noteArea7RulesDesc"/>
            <property name="NoScrapping" value="true"/>
            <property name="SoundPickup" value="map_grab"/>
            <property name="SoundPlace" value="map_place"/>
            <property class="Action0">
                <property name="Class" value="Quest"/>
                <property name="QuestGiven" value="quest_Area7Rules"/>
            </property>
        </item>

        <!-- ================================================
             AREA 7 IOU NOTES
             Given when player is unlucky in vehicle lottery.
             noteArea7IOU (bare) kept for save file compatibility - superseded by noteArea7IOU4.
             ================================================ -->
